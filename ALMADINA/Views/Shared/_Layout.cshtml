<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("ALMA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Student", "Index", "Student", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Class", "Index", "LevelOrClass", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Daily Collection", "DailyFeeCollection", "FeesRegister", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Add Fee", "Index", "FeeType", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Exam</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#"> Exam 1</a>
                            <a class="dropdown-item" href="#"> Exam 2</a>
                            <a class="dropdown-item" href="#"> Exam 3</a>
                            <a class="dropdown-item" href="#"> Exam 4</a>
                            <a class="dropdown-item" href="#"> Exam 5</a>
                        </div>
                    </li>
                    <li>@Html.ActionLink("User List", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("User Type", "Index", "UserType", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav" style="float:right!important">
                    @if (@Session["UserName"] != null)
                    {
                        <li class="nav-link">
                            <span class="mr-2 d-none d-lg-inline small" style="color:white; margin-top:15px;"> User : @Session["UserName"]</span>
                        </li>
                        <li>@Html.ActionLink("Log off", "Logoff", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Sign Up", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }

                </ul>               
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
